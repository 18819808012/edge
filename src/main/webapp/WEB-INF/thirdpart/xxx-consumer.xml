<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        ">
    <dubbo:registry protocol="${ofpc.dubbo.registry.protocol}"
        address="${ofpc.dubbo.registry.address}" 
        id="ofpc-dubbo-registry" register="false" check="false" timeout="${ofpc.dubbo.registry.timeout}" file="${ofpc.dubbo.registry.file}"/>
    
    <dubbo:reference id="ProductInfoService" interface="com.ofpay.product.service.ProductInfoService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="ProductTypeService" interface="com.ofpay.product.service.ProductTypeService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="PhoneInfoService" interface="com.ofpay.product.service.PhoneInfoService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="PayPhoneInfoService" interface="com.ofpay.product.service.PayPhoneInfoService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="AreaServerInfoService" interface="com.ofpay.product.service.AreaServerInfoService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="ProductLinkInfoService" interface="com.ofpay.product.service.ProductLinkInfoService"
        check="false" registry="ofpc-dubbo-registry" />
    <dubbo:reference id="AreaInfoConvertService" interface="com.ofpay.product.service.AreaInfoConvertService"
        check="false" registry="ofpc-dubbo-registry" />


    <dubbo:reference id="registryService" interface="com.alibaba.dubbo.registry.RegistryService" check="false" />

    <bean id="notifyMe" class="com.ofpay.edge.listener.NotifyMe" >
        <property name="registryService" ref="registryService"/>
    </bean>
</beans>